<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snackapp"> <!-- Hier ook de juiste pakketnaam toegevoegd -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnackApp">

        <!-- Set the launcher activity to SignUpActivity -->
        <activity
            android:name="com.example.snackapp.Views.SignupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.snackapp.Views.LoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="com.example.snackapp.Model.MainActivity">
        </activity>

    </application>
</manifest>
